  <!-- Occorrenze all'interno di <text>:

  <term xml:id="CV188_term_astalin" xml:lang="lng" target="#astalin"> target o corresp? REF!
      <w xml:id="CV188_word_astalin">astalin</w>
  </term>
  <gloss xml:id="CV188_gloss_astalin">id est....</gloss> 
  
  -->

  <text>
    <body>
      <div type="glossary" xml:lang="lng">
        
        <!-- TODO -->
        
        <!--
          
          + usare <mentioned> invece di <w> per i termini citati in <etym> come suggerito dalle Guidelines? 
            secondo Bowers e Romary 2016 non una buona soluzione, invece di <cit> etc. però perché non <w>?
            SI <mentioned> NO <w> per omogeneità con il resto della codifica
          + usare <listBibl> e <bibl> invece di <note type="biblio"> e <ref>? NO <ref> più appropriati
          
        -->

        <entry xml:id="astalin">

          <!-- ########  Il lemma  ######## -->

          <form type="lemma">
            <orth>astalin</orth>
            <!-- <pron notation="IPA"></pron> per eventuale trascrizione fonologica / fonetica -->
          </form>
          <gramGrp>
            <pos expand="sostantivo" value="noun">sost.</pos>
            <gen expand="femminile" value="feminine">femm.</gen>
            <iType type="theme">-i</iType> <!-- oppure <iType type="theme" value="-i"/>  -->
          </gramGrp>

          <!-- se si tratta di un verbo:
          <gramGrp>
            <pos value="verb"></pos>
            <iType type="verb" value="weak"></iType>
            <subc value="transitive"></subc>
          </gramGrp>
          -->

          <!-- Termine attuale se esiste in una lingua
          <form type="current"> 
            <usg type="time">current</usg>
            <orth xml:lang="ita">battifredo</orth>
          </form> -->

          <!-- ######## Le occorrenze del termine nel testo critico: per prima cosa la forma del lemma ######## -->

          <cit type="lemma">
            <ref>MSS 1, 5, 8, 9, 10, 11; Gloss. Matr.</ref><!-- <ref> con @target quando disponibile -->
            <!-- Occorrenza principale nell'ER, ms CV188 -->
            <ref target="#CV188_term_astalin">ER capitolo 7</ref>
          </cit>
          
          <!-- ######## Le occorrenze del termine nel testo critico: le forme flesse ######## -->

          <form type="inflected">
            <orth>astalin</orth>
            <gramGrp>
              <pos expand="sostantivo" value="noun">sost.</pos>
              <case expand="nominativo" value="nominative">nom.</case>
              <number expand="singolare" value="singular">sing.</number>
            </gramGrp>
            <cit>
              <!-- NB per occorrenze diverse da quella del <term> il target punta all'elemento <w> corrispondente  --><!-- ??? -->
              <!-- NB se non si usa <term> punterà sempre a un elemento <w> -->
              <ref target="#CV188_word_astalin">ER capitolo 7</ref>
            </cit>
          </form>

          <!-- se si tratta di un verbo:
          <gramGrp>
              <pos value="verb"/>
              <per value="2"/>
              <number value="singular"/>
              <tns value="present"/>
              <mood value="indicative"/>
          </gramGrp>
          -->

          <!-- Varianti ortografiche -->

          <form type="variants">
            <orth>anstallin <ref>MS 2</ref></orth>
            <orth>anstallim <ref>MS 3</ref></orth>
            <orth>anstalin <ref>MS 3</ref></orth>
            <orth>astalium <ref>MS 12</ref></orth>
          </form>

          <!-- Il significato o i significati del termine -->
          
          <sense><!--  n="1" etc. nel caso ci siano più significati possibili -->
            <def>tradimento, fuga o abbandono dei compagni in battaglia</def>
            <xr type="see">V. <ref target="#xxxx">xxxx</ref></xr><!-- cross-reference interna al glossario -->
          </sense>
                    
          <!-- Le occorrenze e le relative glosse in altri testi -->

          <cit type="cit_section">
            <cit type="ms_text">
              <!-- <oRef> corrisponde alla forma ortografica del lemma -->
              <quote><oRef/> fecerit, id est si eum diceperit et cum eum non laboraverit</quote>
              <ref target="#CV188_term_astalin #CV188_gloss_astalin">MS 2</ref>
            </cit>
            <cit>
              <quote>Id <ex>est</ex> decipere</quote>
              <ref>Gloss. Matr.</ref>
            </cit>
          </cit>

          <!-- Etimologia -->
          
          <etym>
            Formazione deverbale basata sul prefisso <m>a-</m>, <m>an-</m> unito alla radice del verbo
            <mentioned>*staljan</mentioned> <def>sottrarsi, sfuggire</def> (cfr. <lang>ia.</lang>
            <mentioned><w lemmaRef="https://bosworthtoller.com/2350">a-stælan</w></mentioned> <def>insinuarsi,
            sedurre</def> e <mentioned><w lemmaRef="https://bosworthtoller.com/28857">stelan</w></mentioned>
            <def>sottrarsi</def>), con suffisso <m>-ini-</m> tipico dei sostantivi femminili.
            <xr type="etym">Etimologicamente connesso con <ptr target="#yyyy"/></xr>
          </etym>

          <!-- Una nota di commento/spiegazione relativa al termine -->
          
          <sense value="desc">Probabilmente una parola antica, tale da necessitare una spiegazione nella glossa
            corrispondente (Francovich Onesti).</sense>
          
          <!-- Riferimenti bibliografici -->

          <listBibl>
            <bibl><ref target="#Onesti2000">Francovich Onesti 2000</ref>, pp. 54-5</bibl>
            <bibl><ref target="#PrinciBraccini1994">Princi Braccini 1994</ref>, pp. 76-8</bibl>
            <bibl><ref target="#Molinari1989">Molinari 1989</ref>, 30 pp. 233-4</bibl>
          </listBibl>
        </entry>
        
        <!-- Gestione degli omografi con <superEntry> (esempio TEI) -->

        <superEntry>
          <form>
            <orth>abandon</orth>
            <hyph>a|ban|don</hyph>
            <pron>@"band@n</pron>
          </form>
          <entry n="1" type="hom">
            <gramGrp>
              <pos>v</pos>
              <subc>T1</subc>
            </gramGrp>
            <sense n="1">
              <def>to leave completely and for ever … </def>
            </sense>
            <sense n="2"/>
          </entry>
          <entry n="2" type="hom">
            <gramGrp>
              <pos>n</pos>
              <subc>U</subc>
            </gramGrp>
            <sense>
              <def>the state when one's feelings and actions are uncontrolled; freedom
                from control…</def>
            </sense>
          </entry>
        </superEntry>

      </div>
    </body>
